    <!-- JavaScript to toggle visibility of policies -->
    <script>
        function showPolicy(policy) {
            // Hide all sections first
            document.getElementById('privacy-policy').style.display = 'none';
            document.getElementById('terms-of-service').style.display = 'none';
    
            // Show the selected policy
            if (policy === 'privacy-policy') {
                document.getElementById('privacy-policy').style.display = 'block';
            } else if (policy === 'terms-of-service') {
                document.getElementById('terms-of-service').style.display = 'block';
            }
        }
    </script>
    

